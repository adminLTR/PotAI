# ==================== DATABASE ====================
MYSQL_ROOT_PASSWORD=rootpass
MYSQL_USER=potai
MYSQL_PASSWORD=potaipass

# ==================== AUTHENTICATION ====================
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=15m
# Refresh Token Configuration
REFRESH_TOKEN_EXPIRES_DAYS=7
# Bcrypt Salt Rounds (10-12 recommended)
SALT_ROUNDS=12

# ==================== SESSION ====================
# Session expiration (in hours)
SESSION_EXPIRES_HOURS=24

# ==================== REDIS ====================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ==================== CORS ====================
# Comma-separated list of allowed origins (or * for all)
CORS_ORIGIN=http://localhost,http://localhost:80,http://localhost:3000

# ==================== IOT ====================
IOT_API_KEY=potai-iot-secret-key-change-this

# ==================== SERVICES PORTS ====================
GATEWAY_PORT=8080
AUTH_SERVICE_PORT=3001
PLANTS_SERVICE_PORT=3002
POTS_SERVICE_PORT=3003
IOT_SERVICE_PORT=3004
MEDIA_SERVICE_PORT=3005
SPECIES_SERVICE_PORT=3006
ML_SERVICE_PORT=5000
FRONTEND_PORT=80

# ==================== SERVICES URLS (Internal Docker Network) ====================
AUTH_SERVICE_URL=http://auth-service:3001
PLANTS_SERVICE_URL=http://plants-service:3002
POTS_SERVICE_URL=http://pots-service:3003
IOT_SERVICE_URL=http://iot-service:3004
MEDIA_SERVICE_URL=http://media-service:3005
SPECIES_SERVICE_URL=http://species-service:3006
ML_SERVICE_URL=http://ml-service:5000

# ==================== ENVIRONMENT ====================
NODE_ENV=development
